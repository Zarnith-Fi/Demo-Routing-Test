{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "*.json"],
    "exclude": ["node_modules", "dist", "tests"]
  }