{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "ist",
      "strict": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "*.json"],
    "exclude": ["node_modules", "ist", "tests"]
  }