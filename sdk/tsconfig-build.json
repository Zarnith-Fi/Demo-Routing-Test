{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "noImplicitAny": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests", "examples"]
  }